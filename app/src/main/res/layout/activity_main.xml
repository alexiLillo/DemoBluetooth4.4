<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.lillo.demobluetooth44.MainActivity">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Pesaje de cajas"
                        android:textSize="20sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/worker2" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Trabajador: "
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtTrabajador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="S/T"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Cajas: "
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtCajas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="S/C"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Peso: "
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtPesoKL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="N/C"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=" kl"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btExport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/weight"
                        android:text="Exportar" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Credenciales"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/txtRut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890-k"
                        android:hint="Rut: 1111111-1"
                        android:focusable="false"
                        android:maxLength="10"
                        android:padding="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla1"
                                android:text="1" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla2"
                                android:text="2" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla3"
                                android:text="3" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla4"
                                android:text="4" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla5"
                                android:text="5" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla6"
                                android:text="6" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla7"
                                android:text="7" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla8"
                                android:text="8" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla9"
                                android:text="9" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclaguion"
                                android:text="-" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="tecla0"
                                android:text="0" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclak"
                                android:text="K" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:onClick="teclaborrar"
                                android:text="C" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="65dp"
                                android:textColor="@android:color/holo_red_light"
                                android:onClick="teclaborrarAll"
                                android:text="AC" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/scannerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asignar credencial" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Sincronización"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Opciones"
                        android:textSize="20sp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>


</LinearLayout>
